= render "shared/analytics"
- if @set_focus_control
  :javascript
    document.getElementById('#{@set_focus_control}').focus();
- if @themer.google_maps_client_id
  %script(src="http://maps.googleapis.com/maps/api/js?client=#{@themer.google_maps_client_id}&sensor=false&v=3.13&libraries=places" type="text/javascript")
- else
  %script(src="http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places" type="text/javascript")
:javascript
  var PlanningAlerts = window.PlanningAlerts || {};
  PlanningAlerts.configuration = {};
- if Configuration::THEME_HAMPSHIRE_BOUNDING_BOX_SW && Configuration::THEME_HAMPSHIRE_BOUNDING_BOX_NE
  :javascript
    PlanningAlerts.configuration.boundingBoxSW = #{Configuration::THEME_HAMPSHIRE_BOUNDING_BOX_SW};
    PlanningAlerts.configuration.boundingBoxNE = #{Configuration::THEME_HAMPSHIRE_BOUNDING_BOX_NE};
= javascript_include_tag "hampshire.application"
= vanity_js

= yield :extra_javascript